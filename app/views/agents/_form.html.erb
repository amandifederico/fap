<%= form_for agent,  id:"new_agent" do |f| %>
  <% if agent.errors.any? %>
    <div id="error_explanation">
      <h2> Fallo el guardado debido a:</h2>

      <ul>
      <% agent.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <label class="col-md-3 control-label hidden-sm hidden-xs">
    Apellido:
  </label>
  <div class="col-sm-12 col-md-9 controls">
      <%= f.text_field :last_name, class: "form-control input-lg", placeholder: "Apellido"%>
      <span class="help-block">Obligatorio. </span>
  </div>
  
  <label class="col-md-3 control-label hidden-sm hidden-xs">
    Nombre:
  </label>
  <div class="col-sm-12 col-md-9 controls">
    <%= f.text_field :name, class: "form-control input-lg", placeholder: "Nombre"%>
    <span class="help-block">Obligatorio. </span>
  </div>

  <label class="col-md-3 control-label hidden-sm hidden-xs">
    DNI:
  </label>
  <div class="col-sm-12 col-md-9 controls">
    <%= f.number_field :dni, class: "form-control input-lg", placeholder: "Dni"%>
    <span class="help-block">Obligatorio. </span>
  </div>
  
  <label class="col-md-3 control-label hidden-sm hidden-xs">
    Posici√≥n:
  </label>
  <div class="col-sm-12 col-md-9 controls">
    <%= f.collection_select :position_id, Position.all, :id, :to_s, {prompt: "Posicion"}, {class: "select2"} %>
    <span class="help-block">Obligatorio. </span>
  </div>
  
  <label class="col-md-3 control-label hidden-sm hidden-xs">
    Fecha Alta:
  </label>  
  <div class="col-sm-12 col-md-9 controls date datepicker">
    <div class="form-group">
      <div class='input-group date'>
        <%= f.text_field :up_date, placeholder: "Fecha de Alta", class: "form-control" %>
        <span class="input-group-addon ">
          <%= fa_icon "list"%>
        </span>
      </div>
    </div>
  </div>


  <label class="col-md-3 control-label hidden-sm hidden-xs">
    Fecha Baja:
  </label>  
  <div class="col-sm-12 col-md-9 controls date datepicker">
    <div class="form-group">
      <div class='input-group date'>
        <%= f.text_field :down_date, placeholder: "Fecha de Baja", class: "form-control" %>
        <span class="input-group-addon ">
          <%= fa_icon "list"%>
        </span>
      </div>
    </div>
  </div>
  
  <div class="col-xs-4">
    <%= link_to 'Volver', agents_path, class: "btn btn-primary btn-block" %>
  </div>      
  <div class="col-xs-8">
    <%= f.submit class: "btn btn-success btn-block"%>
  </div>  
<% end %>