<%= form_for(place) do |f| %>
  <% if place.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(place.errors.count, "error") %> prohibited this place from being saved:</h2>

      <ul>
      <% place.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <label class="col-md-3 control-label hidden-sm hidden-xs">
      Descripcion:
  </label>
  <div class="col-sm-12 col-md-9 controls">
    <%= f.text_field :description, class: "form-control input-lg", placeholder: "Descripcion"%>
    <span class="help-block">Obligatorio. </span>
  </div>

  <div class="col-xs-4">
    <%= link_to 'Volver', places_path, class: "btn btn-primary btn-block" %>
  </div>      
  <div class="col-xs-8">
    <%= f.submit class: "btn btn-success btn-block"%>
  </div> 
<% end %>