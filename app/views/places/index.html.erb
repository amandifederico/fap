<div class="col-md-10  col-xs-12">
  <h2>Lugares</h2>
</div>

<div class="col-md-10  col-xs-12">
  <table class="datatable table-striped table-bordered table-list">
    <thead>
      <tr>
        <th>Descripcion</th>
        <th>Opciones</th>
      </tr>
    </thead>

    <tbody>
      <% @places.each do |place| %>
        <tr>
          <td><%= place.description %></td>
          <td>
            <%= link_to (fa_icon "eye"), place, class: '' %>
            <%= link_to (fa_icon "pencil-square-o"), edit_place_path(place), class: '' %>
            <%= link_to (fa_icon "trash-o"), place, method: :delete, data: { confirm: 'Â¿Seguro desea eliminar este registro?' }, class: '' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="col-md-10  col-xs-12">
  <%= link_to 'Nuevo Lugar', new_place_path, {:class=>"btn btn-primary btn-submit"} %>
</div>