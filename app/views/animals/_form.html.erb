<div class="col-sm-6">  
  <%= form_for(animal) do |f| %>
    <% if animal.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(animal.errors.count, "error") %> prohibited this animal from being saved:</h2>

        <ul>
        <% animal.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.text_field :description, class: "form-control input-lg", placeholder: "Descripcion"%>
    </div>

    <div class="form-group">
      <%= f.text_field :initials, class: "form-control input-lg", placeholder: "Sigla"%>
    </div>

    <div class="form-group">
      <%= f.collection_select :animal_type_id, AnimalType.all, :id, :to_s, {prompt: "Tipo"}, {class: "select2"} %>
    </div>

    <div class="form-group">
      <%= f.number_field :average_value, class: "form-control input-lg", placeholder: "Peso promedio"%>
    </div>

    <div class="actions">
        <%= f.submit class: "btn btn-outline-success btn-block"%>
    </div>
  <% end %>
</div>