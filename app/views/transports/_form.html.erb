<div class="row justify-content-md-center">
  <div class="col-sm-6">  
    <%= form_for(transport) do |f| %>
      <% if transport.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(transport.errors.count, "error") %> prohibited this transport from being saved:</h2>

          <ul>
          <% transport.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
            <%= f.number_field :coupled, class: "form-control input-lg", placeholder: "Acoplado"%>
      </div>

      <div class="form-group">
            <%= f.number_field :capacity, class: "form-control input-lg", placeholder: "Capacidad"%>
      </div>

      <div class="form-group">
            <%= f.text_field :plate, class: "form-control input-lg", placeholder: "Patente"%>
      </div>

      <div class="form-group">
            <%= f.number_field :model, class: "form-control input-lg", placeholder: "Modelo"%>
      </div>

      <div class="form-group">
            <%= f.text_field :weight, class: "form-control input-lg", placeholder: "Peso"%>
      </div>

      <div class="form-group">
            <%= f.text_field :brand, class: "form-control input-lg", placeholder: "Marca"%>
      </div>

      <div class="actions row">
          <div class="col-sm-4">
            <%= link_to 'Volver', transports_path, class: "btn btn-outline-primary btn-block" %>
          </div>      
          <div class="col-sm-8">
            <%= f.submit class: "btn btn-outline-success btn-block"%>
          </div>  
      </div>
    <% end %>
  </div>
</div>