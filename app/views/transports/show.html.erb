<div class="col-xs-12">
  <h2 style="text-align: center;">Transporte</h2>
</div>

<label class="col-xs-3 control-label">
  Acoplado:
</label>
<div class="col-xs-9 show-field">
  <%= @transport.coupled %>
</div>

<label class="col-xs-3 control-label">
  Capacidad:
</label>
<div class="col-xs-9 show-field">
  <%= @transport.capacity %>
</div>

<label class="col-xs-3 control-label">
  Patente:
</label>
<div class="col-xs-9 show-field">
  <%= @transport.plate %>
</div>

<label class="col-xs-3 control-label">
  Modelo:
</label>
<div class="col-xs-9 show-field">
  <%= @transport.model %>
</div>

<label class="col-xs-3 control-label">
  Peso:
</label>
<div class="col-xs-9 show-field">
  <%= @transport.weight %>
</div>

<label class="col-xs-3 control-label">
  Marca:
</label>
<div class="col-xs-9 show-field">
  <%= @transport.brand %>
</div>

<div class="col-xs-4">
  <%= link_to 'Editar', edit_transport_path(@transport), class: "btn btn-primary btn-block" %>
</div>      
<div class="col-xs-8">
  <%= link_to 'Volver', transports_path, class: "btn btn-success btn-block"%>
</div> 
