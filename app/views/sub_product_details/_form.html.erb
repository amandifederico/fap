<div class="col-sm-6">
  <%= form_for(sub_product_detail) do |f| %>
    <% if sub_product_detail.errors.any? %>
      <script type="text/javascript">
        <% sub_product_detail.errors.full_messages.each do |message| %>
          toastr['error']('<%= message %>');
        <% end %>
      </script>
    <% end %>

    <div class="form-group">
      <%= f.collection_select :sub_product_id, SubProduct.all, :id, :to_s, {prompt: "Sub Producto"}, {class: "select2"} %>
    </div>

    <div class="form-group">
      <%= f.collection_select :sub_product_type_id, SubProductType.all, :id, :to_s, {prompt: "Tipo"}, {class: "select2"} %>
    </div>

    <% if current_user.SubA?  or current_user.admin?%>
      <div class="form-group">
        <%= f.number_field :weight, class: "form-control input-lg", placeholder: "Peso"%>
      </div>
    <% end %>

    <% if current_user.SubB?  or current_user.admin?%>
      <div class="form-group">
        <%= f.number_field :weight_control, class: "form-control input-lg", placeholder: "Peso control"%>
      </div>
    <% end %>
    
    <div class="form-group">
      <%= f.text_field :observation, class: "form-control input-lg", placeholder: "Observacion"%>
    </div>

    <div class="actions">
        <%= f.submit class: "btn btn-outline-success btn-block"%>
    </div>
  <% end %>
</div>