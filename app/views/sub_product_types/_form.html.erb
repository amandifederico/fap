<div class="col-sm-6">
  <%= form_for(sub_product_type) do |f| %>
    <% if sub_product_type.errors.any? %>
      <script type="text/javascript">
        <% sub_product_type.errors.full_messages.each do |message| %>
          toastr['error']('<%= message %>');
        <% end %>
      </script>
    <% end %>

    <div class="form-group">
      <%= f.text_field :description, class: "form-control input-lg", placeholder: "Descripcion"%>
    </div>

    <div class="actions">
        <%= f.submit class: "btn btn-outline-success btn-block"%>
    </div>
  <% end %>
</div>