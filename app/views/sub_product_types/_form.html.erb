<%= form_for(sub_product_type) do |f| %>
  <% if sub_product_type.errors.any? %>
    <script type="text/javascript">
      <% sub_product_type.errors.full_messages.each do |message| %>
        toastr['error']('<%= message %>');
      <% end %>
    </script>
  <% end %>

  <label class="col-md-3 control-label hidden-sm hidden-xs">    
      Descripción:
  </label>
  <div class="col-sm-12 col-md-9 controls">
    <%= f.text_field :description, class: "form-control input-lg", placeholder: "Descripción"%>
  </div>

  <div class="col-xs-4">
    <%= link_to 'Volver', sub_product_types_path, class: "btn btn-primary btn-block" %>
  </div>      
  <div class="col-xs-8">
      <%= f.submit class: "btn btn-success btn-block"%>
  </div>  
<% end %>
