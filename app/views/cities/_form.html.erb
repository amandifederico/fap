<div class="row justify-content-md-center">
  <div class="col-sm-6">  
    <%= form_for(city) do |f| %>
      <% if city.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(city.errors.count, "error") %> prohibited this city from being saved:</h2>

          <ul>
          <% city.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>


      <div class="form-group">
        <%= f.text_field :name, class: "form-control input-lg", placeholder: "Nombre"%>
      </div>

      <div class="form-group">
        <%= f.text_field :province, class: "form-control input-lg", placeholder: "Provincia"%>
      </div>


      <div class="form-group">
        <%= f.number_field :cp, class: "form-control input-lg", placeholder: "Codigo Postal"%>
      </div>

      <div class="actions">
          <%= f.submit class: "btn btn-outline-success btn-block"%>
      </div>
    <% end %>
  </div>
</div>