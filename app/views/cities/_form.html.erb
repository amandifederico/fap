      CÃ³digo Postal:
  </label>
  <div class="col-sm-12 col-md-9 controls">
      <%= f.number_field :cp, class: "form-control input-lg", placeholder: "Codigo Postal"%>
      <span class="help-block">Obligatorio. </span>
  </div>
  
  <div class="col-xs-4">
    <%= link_to 'Volver', cities_path, class: "btn btn-primary btn-block" %>
  </div>      
  <div class="col-xs-8">
      <%= f.submit class: "btn btn-success btn-block"%>
  </div>  
<% end %>