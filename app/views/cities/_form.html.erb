<%= form_for city,  id:"new_city" do |f| %>
  <% if city.errors.any? %>
    <script type="text/javascript">
      <% city.errors.full_messages.each do |message| %>
        toastr['error']('<%= message %>');
      <% end %>
    </script>
  <% end %>
 
  <label class="col-md-3 control-label hidden-sm hidden-xs">    
      Nombre:
  </label>
  <div class="col-sm-12 col-md-9 controls">
      <%= f.text_field :name, class: "form-control input-lg", placeholder: "Nombre"%>
      <span class="help-block">Obligatorio. </span>
  </div>

  <label class="col-md-3 control-label hidden-sm hidden-xs">    
      Provincia:
  </label>
  <div class="col-sm-12 col-md-9 controls">
      <%= f.text_field :province, class: "form-control input-lg", placeholder: "Provincia"%>
      <span class="help-block">Obligatorio. </span>
  </div>
  
