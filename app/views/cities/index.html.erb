<h1>Ciudades</h1>

<table class="datatable table-striped table-bordered table-list">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Provincias</th>
      <th>Cod postal</th>
      <th>Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= city.name %></td>
        <td><%= city.province %></td>
        <td><%= city.cp %></td>
        <td>
          <%= link_to (fa_icon "eye"), city, class: 'btn btn-sm btn-success' %>
          <%= link_to (fa_icon "pencil-square-o"), edit_city_path(city), class: 'btn btn-sm btn-warning' %>
          <%= link_to (fa_icon "trash-o"), city, method: :delete, data: { confirm: 'Â¿Seguro desea eliminar este registro?' }, class: 'btn btn-sm btn-danger' %>      
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Ciudad', new_city_path, {:class=>"btn btn-primary"} %>
