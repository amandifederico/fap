<tr class="detail-field">
	<td><%= f.collection_select :type_id, Type.all(), :id, :to_s, {prompt: "Tipo"}, {class: "select2"} %></td>
	<td><%= f.collection_select :type_id, Animal.all(), :id, :to_s, {prompt: "Animal"}, {class: "select2"} %></td>

	<% if current_user.PlantaA?  or current_user.admin?%>
		<td><%= f.number_field :weight, class: "form-control input-lg", placeholder: "Peso"%></td>
	<% end %>
	
	<% if current_user.PlantaB?  or current_user.admin?%>
		<td><%= f.number_field :weight_control, class: "form-control input-lg", placeholder: "Peso control"%></td>
	<% end %>
	
	<td><%= f.text_field :observation, class: "form-control input-lg", placeholder: "Observacion"%></td>
</tr>