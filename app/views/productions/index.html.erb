<div class="col-xs-10">
  <h2>Producción</h2>
</div>

<div class="col-xs-10  col-xs-12">
  <table class="datatable table-striped table-bordered table-list">
    <thead>
      <tr>
        <th>Tropa</th>
        <th>Descripción</th>
        <th>Acciones</th>
      </tr>
    </thead>

    <tbody>
      <% @productions.each do |production| %>
        <tr>
          <td><%= production.troop.dte %></td>
          <td><%= production.description %></td>
          <td>
            <%= link_to (fa_icon "eye"), production, class: '' %>
            <%= link_to (fa_icon "pencil-square-o"), edit_production_path(production), class: '' %>
            <%= link_to (fa_icon "trash-o"), production, method: :delete, data: { confirm: '¿Seguro desea eliminar este registro?' }, class: '' %>
          </td>        
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<div class="col-xs-10 col-xs-12">
  <% if current_user.admin? %>
    <%= link_to 'Producción Nueva', new_production_path, {:class=>"btn btn-primary"} %>
  <% end %>
</div>