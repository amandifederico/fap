<%= form_for(seq_range_troop_number) do |f| %>
  <% if seq_range_troop_number.errors.any? %>
    <script type="text/javascript">
      <% seq_range_troop_number.errors.full_messages.each do |message| %>
        toastr['error']('<%= message %>');
      <% end %>
    </script>
  <% end %>
  
  <label class="col-md-3 control-label hidden-sm hidden-xs">
    R.N.T:
  </label>
  <div class="col-sm-12 col-md-9 controls">
      <%= f.number_field :rtn, class: "form-control input-lg", placeholder: "Rango Numero Tropa"%>
      <span class="help-block">Obligatorio. </span>
  </div>
  <div class="col-xs-4">
    <%= link_to 'Volver', seq_range_troop_numbers_path, class: "btn btn-primary btn-block" %>
  </div>      
  <div class="col-xs-8">
    <%= f.submit class: "btn btn-success btn-block"%>
  </div>  
<% end %>
