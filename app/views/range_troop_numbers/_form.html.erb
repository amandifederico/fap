
<%= form_for(range_troop_number) do |f| %>
  <% if range_troop_number.errors.any? %>
    <script type="text/javascript">
      <% range_troop_number.errors.full_messages.each do |message| %>
        toastr['error']('<%= message %>');
      <% end %>
    </script>
  <% end %>

  <label class="col-md-3 control-label hidden-sm hidden-xs">
    Minimo:
  </label>
  <div class="col-sm-12 col-md-9 controls">
    <%= f.number_field :min, class: "form-control input-lg", placeholder: "Minimo"%>
  </div>

  <label class="col-md-3 control-label hidden-sm hidden-xs">
    Maximo:
  </label>
  <div class="col-sm-12 col-md-9 controls">
    <%= f.text_field :max, class: "form-control input-lg", placeholder: "Maximo"%>
  </div>

  <div class="col-xs-4">
    <%= link_to 'Volver', range_troop_numbers_path, class: "btn btn-primary btn-block" %>
  </div>      
  <div class="col-xs-8">
    <%= f.submit class: "btn btn-success btn-block"%>
  </div>  


<% end %>
