<div class="col-md-10  col-xs-12">
  <h2>Turnos</h2>
</div>


<div class="col-md-10  col-xs-12">

  <table class="datatable table-striped table-bordered table-list">
    <thead>
      <tr>
        <th>Fecha</th>
        <th>Descripcion</th>
        <th>Opciones</th>
      </tr>
    </thead>

    <tbody>
      <% @turns.each do |turn| %>
        <tr>
          <td><%= turn.date %></td>
          <td><%= turn.description %></td>
          <td>
            <%= link_to (fa_icon "eye"), turn, class: '' %>
            <%= link_to (fa_icon "pencil-square-o"), edit_turn_path(turn), class: '' %>
            <%= link_to (fa_icon "trash-o"), turn, method: :delete, data: { confirm: 'Â¿Seguro desea eliminar este turno?' }, class: '' %>
                
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="col-md-10  col-xs-12">
  <%= link_to 'Crear Turno', new_turn_path, {:class=>"btn btn-primary btn-submit"} %>
</div>
