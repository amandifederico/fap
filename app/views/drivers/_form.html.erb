<%= form_for(driver) do |f| %>
  <% if driver.errors.any? %>
    <div id="error_explanation">
      <h2> Fallo el guardado debido a:</h2>

      <ul>
      <% driver.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <label class="col-md-3 control-label hidden-sm hidden-xs">
    Nombre:
  </label>
  <div class="col-sm-12 col-md-9 controls">
    <%= f.text_field :name, class: "form-control input-lg", placeholder: "Nombre"%>
    <span class="help-block">Obligatorio. </span>
  </div>

  <label class="col-md-3 control-label hidden-sm hidden-xs">
    Apellido:
  </label>
  <div class="col-sm-12 col-md-9 controls">
    <%= f.text_field :last_name, class: "form-control input-lg", placeholder: "Apellido"%>
    <span class="help-block">Obligatorio. </span>
  </div>

  <label class="col-md-3 control-label hidden-sm hidden-xs">
    D.N.I.:
  </label>
  <div class="col-sm-12 col-md-9 controls">
    <%= f.number_field :dni, class: "form-control input-lg", placeholder: "DNI"%>
    <span class="help-block">Obligatorio. </span>
  </div>

  <label class="col-md-3 control-label hidden-sm hidden-xs">
    Observaci√≥n:
  </label>
  <div class="col-sm-12 col-md-9 controls">
    <%= f.text_field :observation, class: "form-control input-lg", placeholder: "Observacion"%>
  </div>

  <div class="col-xs-4">
    <%= link_to 'Volver', drivers_path, class: "btn btn-primary btn-block" %>
  </div>      
  <div class="col-xs-8">
    <%= f.submit class: "btn btn-success btn-block"%>
  </div>  
<% end %>
