<p id="notice"><%= notice %></p>

<h1>Production Details</h1>

<table>
  <thead>
    <tr>
      <th>Production</th>
      <th>Type</th>
      <th>Animal</th>
      <th>Weight</th>
      <th>Weight control</th>
      <th>Observation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @production_details.each do |production_detail| %>
      <tr>
        <td><%= production_detail.production %></td>
        <td><%= production_detail.type %></td>
        <td><%= production_detail.animal %></td>
        <td><%= production_detail.weight %></td>
        <td><%= production_detail.weight_control %></td>
        <td><%= production_detail.observation %></td>
        <td><%= link_to 'Show', production_detail %></td>
        <td><%= link_to 'Edit', edit_production_detail_path(production_detail) %></td>
        <td><%= link_to 'Destroy', production_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

