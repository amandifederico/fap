<h1>Detalle Producción</h1>

<table class="datatable table-striped table-bordered table-list">
  <thead>
    <tr>
      <th>Producción</th>
      <th>Tipo</th>
      <th>Animal</th>
      <th>Peso</th>
      <th>Peso control</th>
      <th>Observación</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @production_details.each do |production_detail| %>
      <tr>
        <td><%= production_detail.production %></td>
        <td><%= production_detail.type %></td>
        <td><%= production_detail.animal %></td>
        <td><%= production_detail.weight %></td>
        <td><%= production_detail.weight_control %></td>
        <td><%= production_detail.observation %></td>
        <td>
          <%= link_to (fa_icon "eye"), production_detail, class: 'btn btn-sm btn-success' %>
          <%= link_to (fa_icon "pencil-square-o"), edit_production_detail_path(production_detail), class: 'btn btn-sm btn-warning' %>
          <%= link_to (fa_icon "trash-o"), production_detail, method: :delete, data: { confirm: '¿Seguro desea eliminar este registro?' }, class: 'btn btn-sm btn-danger' %>      
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

